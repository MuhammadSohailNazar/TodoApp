@model TodoTutorial.Models.TodoItem

<div class="container">

    <h2 class="title">Create Todo</h2>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="Title">Title</label>
            <input type="text" class="form-control task-input" placeholder="Title" id="Title" name="Title" required />
        </div>
        <button class="btn btn-primary">
            Create
        </button>
    </form>
</div>
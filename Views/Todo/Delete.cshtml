<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm p-4" style="max-width: 500px;background-color:inherit; width: 100%; border-radius: 10px;">
        <h2 class="text-center text-danger mb-4" style="font-weight:700">Delete Todo</h2>
        <h4 class="text-center mb-4">Are you sure you want to delete this item?</h4>

        <div class="mb-4">
            <strong>Title:</strong> @Model.Title <br />
            <strong>Completed:</strong> @(Model.IsCompleted ? "Yes" : "No")
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger d-flex align-items-center">
                    Delete
                </button>
                <a href="@Url.Action("Index", "Todo")" class="btn btn-secondary d-flex align-items-center">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

